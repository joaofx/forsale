@model ForSale.Models.Product


<div class="row">
    
     <div class="col-md-4">

            <h2>@Model.Title</h2>
         <div class="label label-success price">@Model.Price.Show()</div>

         <p>@Text(Model.Description)</p>
    </div>
    
    <div class="col-md-6">

        <iframe class="album" src="//imgur.com/a/@Model.AlbumId/embed?background=f2f2f2&text=1a1a1a&link=4e76c9"></iframe>

    </div>
    
</div>

@helper Text(string text)
{
    @Html.Raw(text.Replace("\n", "<br/>"))
}